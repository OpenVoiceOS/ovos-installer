[Unit]
Documentation=https://openvoiceos.github.io/ovos-docker/about/glossary/components/#ovos-audio
Description=Open Voice OS - Audio
PartOf=ovos.service
Requires=ovos.service ovos-messagebus.service ovos-phal.service

[Service]
WorkingDirectory=%h/.venvs/ovos
ExecStart=%h/.venvs/ovos/bin/ovos-audio
ExecReload=/usr/bin/kill -s HUP $MAINPID
ExecStop=/usr/bin/kill -s KILL $MAINPID
Restart=on-failure
RestartSec={{ '1s' if ovos_installer_tuning | bool else '5s' }}
{% if ovos_installer_tuning_performance | bool %}
Nice=-10
IOSchedulingClass=realtime
IOSchedulingPriority=0
{% endif %}

[Install]
WantedBy=ovos.service
